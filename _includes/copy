                var partner_email = form.querySelector("#contact-form #partner-email").value;
                var partner_role = form.querySelector("#contact-form #partner-role").value;
                var partner_phone = form.querySelector("#contact-form #partner-phone").value;
                var partner_texting = form.querySelector("#contact-form #partner-texting").value;
